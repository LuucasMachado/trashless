<!DOCTYPE html>
<html>
  <head>
    <title>Trashless</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <ul>
        <% if user_signed_in? %>
          <li><%= link_to 'Registrar coleta', new_removal_order_path %></li>
        <% end %>
      </ul>
    </nav>
    <%= yield %>
  </body>
</html>
